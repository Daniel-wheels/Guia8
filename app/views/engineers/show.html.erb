<%- model_class = Engineer -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:fullname) %>:</strong></dt>
  <dd><%= @engineer.fullname %></dd>
  <dt><strong><%= model_class.human_attribute_name(:dependency) %>:</strong></dt>
  <dd><%= @engineer.dependency %></dd>
  <dt><strong><%= model_class.human_attribute_name(:studies) %>:</strong></dt>
  <dd><%= @engineer.studies %></dd>
  <dt><strong><%= model_class.human_attribute_name(:proyect_id) %>:</strong></dt>
  <dd><%= @engineer.proyect_id %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.Atras', :default => t("helpers.links.back")),
              engineers_path, :class => 'btn'  %>
  <%= link_to t('.Editar', :default => t("helpers.links.edit")),
              edit_engineer_path(@engineer), :class => 'btn' %>
  <%= link_to t('.Eliminar', :default => t("helpers.links.destroy")),
              engineer_path(@engineer),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Estas Seguro')) },
              :class => 'btn btn-danger' %>
</div>
