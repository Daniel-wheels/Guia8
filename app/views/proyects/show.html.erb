<%- model_class = Proyect -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @proyect.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:description) %>:</strong></dt>
  <dd><%= @proyect.description %></dd>
  <dt><strong><%= model_class.human_attribute_name(:begindate) %>:</strong></dt>
  <dd><%= @proyect.begindate %></dd>
  <dt><strong><%= model_class.human_attribute_name(:enddate) %>:</strong></dt>
  <dd><%= @proyect.enddate %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.atras', :default => t("helpers.links.atras")),
              proyects_path, :class => 'btn'  %>
  <%= link_to t('.editar', :default => t("helpers.links.editar")),
              edit_proyect_path(@proyect), :class => 'btn' %>
  <%= link_to t('.eliminar', :default => t("helpers.links.eliminar")),
              proyect_path(@proyect),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'estas seguro?')) },
              :class => 'btn btn-danger' %>
</div>
