<%= simple_form_for @proyect, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :name %>
  <%= f.input :description %>
  <%= f.input :begindate %>
  <%= f.input :enddate %>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancelar', :default => t("helpers.links.cancelar")),
                proyects_path, :class => 'btn' %>
  </div>
<% end %>
